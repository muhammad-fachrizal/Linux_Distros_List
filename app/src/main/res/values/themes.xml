<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LinuxDistrosList" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.LinuxDistrosList" parent="Base.Theme.LinuxDistrosList" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/teal_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/mint</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="toolbarStyle">@style/Theme.Custom.Toolbar</item>
        <item name="homeAsUpIndicator">@drawable/baseline_arrow_back_24</item>
    </style>

    <style name="Theme.Custom.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextDetailsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="ImageDetailsIcon">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="TableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="TextTableRow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextTableRow.Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTableRow.Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>