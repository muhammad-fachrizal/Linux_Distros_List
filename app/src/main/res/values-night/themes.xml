<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LinuxDistrosList" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
    </style>

    <style name="Theme.LinuxDistrosList" parent="Base.Theme.LinuxDistrosList" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_light</item>
        <item name="colorPrimaryVariant">@color/teal</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/mint</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="toolbarStyle">@style/Theme.Custom.Toolbar</item>
        <item name="homeAsUpIndicator">@drawable/baseline_arrow_back_24</item>
    </style>

    <style name="Theme.Custom.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>